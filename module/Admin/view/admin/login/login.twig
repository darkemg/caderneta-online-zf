{% extends 'layout/layout.twig' %}

{% block style %}
<!-- begin: CSS -->
{{ css|raw }}
<!-- end: CSS -->
{% endblock %}

{% block scriptHead %}
<!-- begin: HEAD JS -->
<!-- end: HEAD JS -->
{% endblock scriptHead %}

{% block content %}
<div class="container-fluid-full">
	<div class="row-fluid">				
		<div class="row-fluid">
			<div class="login-box">
				<div class="icons">
					<a href="{{ url('admin') }}" title="Voltar para a página principal">
						<i class="fa fa-home"></i>
					</a>
				</div>
				<h2>
					<i class="fa fa-bar-chart"></i>
					{{ translate('Área Administrativa') }}
				</h2>
				<form id="login" class="form-horizontal" action="{{ url('admin/autenticar') }}" method="post">
					<fieldset>						
						<div class="input-prepend" title="{{ translate('Nome de usuário') }}">
							<span class="add-on">
								<i class="fa fa-user"></i>
							</span>
							<input class="input-large span10" name="username" id="username" type="text" placeholder="{{ translate('Nome de usuário') }}" />
						</div>
						<div class="clearfix"></div>
						<div class="input-prepend" title="{{ translate('Senha') }}">
							<span class="add-on">
								<i class="fa fa-key"></i>
							</span>
							<input class="input-large span10" name="password" id="password" type="password" placeholder="{{ translate('Senha') }}" />
						</div>
						<div class="clearfix"></div>
						<div class="button-login">	
							<button type="submit" class="btn btn-primary">
								<i class="fa fa-spinner fa-pulse hidden js-icon-loading"></i>
								<i class="fa fa-arrow-right js-icon-ready"></i>
								{{ translate('Login') }}
							</button>
						</div>
						<div class="clearfix"></div>
					</fieldset>
				</form>
				<hr>
				<h3>{{ translate('Esqueceu sua senha?') }}</h3>
				<p>
					<a href="#">{{ translate('Clique aqui') }}</a> {{ translate('para solicitar uma nova senha') }}.
				</p>	
			</div><!--/span-->
		</div><!--/row-->
	</div><!--/.fluid-container-->
</div><!--/fluid-row-->
{%  endblock %}

{% block scriptBody %}
<!-- begin: BODY JS -->
{{ jsBody|raw }}
<!-- end: BODY JS -->
{% endblock scriptBody %}